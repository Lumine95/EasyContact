<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6"
    android:orientation="vertical">

    <include layout="@layout/base_title_bar" />

    <RelativeLayout
        android:id="@+id/rl_modify_pwd"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_size_15"
            android:text="修改密码"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_size_15"
            android:src="@mipmap/ic_right_arrow" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/color_e8" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_size_15"
            android:text="关于易沟通"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_size_15"
            android:src="@mipmap/ic_right_arrow" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/color_e8" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="@dimen/margin_size_40"
        android:layout_marginTop="@dimen/margin_size_40"
        android:layout_marginEnd="@dimen/margin_size_40"
        android:background="@drawable/shape_rectangle"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>
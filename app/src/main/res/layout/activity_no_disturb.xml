<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6"
    android:orientation="vertical">

    <include layout="@layout/base_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_55"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/color_e8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_size_15"
            android:text="启用免打扰"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_16" />

        <Button
            android:id="@+id/btn_switch"
            android:layout_width="@dimen/margin_size_50"
            android:layout_height="@dimen/margin_size_50"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_size_10"
            android:background="@drawable/selector_switch" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_50"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_size_15"
        android:paddingEnd="@dimen/margin_size_15"
        android:text="@string/no_disturb_warning"
        android:textColor="@color/color_9"
        android:textSize="@dimen/text_size_12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_55"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/color_e8" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_0.5"
            android:background="@color/color_e8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_size_15"
            android:text="免打扰时间段"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_16" />

        <Button
            android:id="@+id/btn_switch_time"
            android:layout_width="@dimen/margin_size_50"
            android:layout_height="@dimen/margin_size_50"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_size_10"
            android:background="@drawable/selector_switch" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_start"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_size_15"
            android:text="开始时间"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/color_e8" />

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_size_30"

            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_size_15"
            android:src="@mipmap/ic_right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_end"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_size_15"
            android:text="结束时间"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/color_e8" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_size_30"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_size_15"
            android:src="@mipmap/ic_right_arrow" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_size_15"
        android:text="@string/no_disturb_warning2"
        android:textColor="@color/color_9"
        android:textSize="@dimen/text_size_12" />

</LinearLayout>
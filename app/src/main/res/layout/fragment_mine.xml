<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/margin_size_25"-->
        <!--android:background="@color/colorPrimary" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_size_30"
                android:layout_marginTop="@dimen/margin_size_45"
                android:layout_marginBottom="@dimen/margin_size_45"
                android:text="@string/app_name"
                android:textColor="#ffffffff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="21dp"
                android:background="@drawable/shape_ripple"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_setting" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_voice_account"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_size_15"
                android:background="@mipmap/ic_right_arrow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_0.5"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="36dp"
                android:text="语音账户"
                android:textColor="@color/color_3"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="@dimen/margin_size_15"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_size_15"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_mine_voice" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_data_account"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_size_15"
                android:background="@mipmap/ic_right_arrow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_0.5"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="36dp"
                android:text="流量账户"
                android:textColor="@color/color_3"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="@dimen/margin_size_15"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_size_15"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_mine_data" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_my_order"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_size_15"
                android:background="@mipmap/ic_right_arrow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_0.5"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="36dp"
                android:text="我的订单"
                android:textColor="@color/color_3"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="@dimen/margin_size_15"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_size_15"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_mine_order" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_call_detail"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_size_15"
                android:background="@mipmap/ic_right_arrow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_0.5"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="36dp"
                android:text="通话详情"
                android:textColor="@color/color_3"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="@dimen/margin_size_15"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_size_15"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_mine_call" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_feedback"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_size_15"
                android:background="@mipmap/ic_right_arrow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_0.5"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="36dp"
                android:text="意见反馈"
                android:textColor="@color/color_3"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="@dimen/margin_size_15"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_size_15"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_mine_feedback" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_message"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_size_15"
                android:background="@mipmap/ic_right_arrow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_0.5"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="36dp"
                android:text="系统消息"
                android:textColor="@color/color_3"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="@dimen/margin_size_15"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_size_15"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_mine_message" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_share"
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_size_15"
                android:background="@mipmap/ic_right_arrow" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_0.5"
                android:layout_alignParentBottom="true"
                android:background="@color/color_e8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="36dp"
                android:text="推荐给好友"
                android:textColor="@color/color_3"
                android:textSize="@dimen/text_size_15" />

            <ImageView
                android:layout_width="@dimen/margin_size_15"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_size_15"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_mine_share" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6"
    android:orientation="vertical">

    <include layout="@layout/base_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_size_20"
            android:text="手机号"
            android:textColor="@color/color_B"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_0.5"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_size_10"
            android:background="@color/color_e8" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp"
            android:background="@null"
            android:digits="1234567890"
            android:hint="请输入手机号码"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/color_3"
            android:textColorHint="@color/color_9"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_size_20"
            android:text="验证码"
            android:textColor="@color/color_B"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_0.5"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_size_10"
            android:background="@color/color_e8" />

        <Button
            android:id="@+id/btn_get_code"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_size_20"
            android:background="@drawable/shape_rectangle"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_13" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp"
            android:layout_toStartOf="@id/btn_get_code"
            android:background="@null"
            android:digits="1234567890"
            android:hint="请输入验证码"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="6"
            android:textColor="@color/color_3"
            android:textColorHint="@color/color_9"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_size_20"
            android:text="新密码"
            android:textColor="@color/color_B"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_0.5"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_size_10"
            android:background="@color/color_e8" />

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp"
            android:background="@null"
            android:hint="请输入新密码"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColor="@color/color_3"
            android:textColorHint="@color/color_9"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_size_20"
            android:text="确认密码"
            android:textColor="@color/color_B"
            android:textSize="@dimen/text_size_16" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_0.5"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_size_10"
            android:background="@color/color_e8" />

        <EditText
            android:id="@+id/et_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp"
            android:background="@null"
            android:hint="请确认新密码"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:textColor="@color/color_3"
            android:textColorHint="@color/color_9"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_20"
        android:layout_marginTop="@dimen/margin_size_15"
        android:text="@string/password_tip"
        android:textColor="#ff999999"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="@dimen/margin_size_40"
        android:layout_marginTop="@dimen/margin_size_45"
        android:layout_marginEnd="@dimen/margin_size_40"
        android:background="@drawable/shape_rectangle"

        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />
</LinearLayout>